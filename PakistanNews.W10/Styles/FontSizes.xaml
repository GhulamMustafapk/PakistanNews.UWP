    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:String x:Key="DefaultFontFamily">Segoe WP</x:String>
    <!--Details-->
    <x:Double x:Key="DetailTitleTextSize">20</x:Double>

    <x:Double x:Key="DescriptionTextSizeLarge">18</x:Double>
    <x:Double x:Key="DescriptionTextSizeNormal">16</x:Double>
    <x:Double x:Key="DescriptionTextSizeSmall">14.0</x:Double>

    <!--Common-->
    <x:Double x:Key="AppBarTitleFontSize">20</x:Double>
    <x:Double x:Key="TabHeaderFontSize">20</x:Double>
    <x:Double x:Key="AppDescriptionsFontSize">12</x:Double>

    <!--Home-->
    <x:Double x:Key="SectionTitleVeryHighResolutions">20</x:Double>
    <x:Double x:Key="SectionTitleHighResolutions">18</x:Double>
    <x:Double x:Key="SectionTitleMediumResolutions">16</x:Double>
    <x:Double x:Key="SectionTitleLowResolutions">16</x:Double>
